@* Views/Shared/_CoachLayout.cshtml *@
@{
    Layout = null;
    var title = ViewBag.Title ?? "Coach Dashboard - FitVerse";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Coach Dashboard | FitVerse</title>

    <!-- ✅ Bootstrap 5.3 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- ✅ Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <!-- ✅ Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />

    <!-- ✅ Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

    <!-- ✅ Custom CSS -->
    <link rel="stylesheet" href="~/css/style2.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8fafc;
        }

        .navbar-custom {
            background-color: #111827;
            padding: 0.75rem 1rem;
        }

            .navbar-custom .nav-link,
            .navbar-custom .navbar-brand {
                color: #fff !important;
                font-weight: 500;
            }

                .navbar-custom .nav-link.active {
                    color: #10b981 !important;
                }

                .navbar-custom .nav-link:hover {
                    color: #10b981 !important;
                }

        .logo-icon {
            font-size: 1.5rem;
            margin-right: 0.5rem;
        }

        .user-avatar {
            width: 35px;
            height: 35px;
            border-radius: 50%;
        }

        .notification-badge {
            position: absolute;
            top: 0;
            right: 2px;
            background-color: #ef4444;
            color: white;
            border-radius: 50%;
            font-size: 0.7rem;
            padding: 3px 6px;
        }
    </style>
</head>
<body>
    <!-- ✅ Navigation -->
    <nav class="navbar navbar-expand-lg navbar-custom sticky-top">
        <div class="container-fluid px-4">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <div class="logo-icon">💪</div>
                <span>FitVerse</span>
            </a>

            <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center gap-2">

                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Coach" asp-action="Dashboard">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Coach" asp-action="Exercises">
                            <i class="bi bi-lightning"></i> Exercises
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Coach" asp-action="Plans">
                            <i class="bi bi-calendar-check"></i> Plans
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Coach" asp-action="Clients">
                            <i class="bi bi-people"></i> Clients
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Chat" asp-action="Index">
                            <i class="bi bi-chat-dots"></i> Chat
                        </a>
                    </li>

                    <!-- ✅ Notifications -->
                    <li class="nav-item position-relative">
                        <a class="nav-link notification-bell" asp-controller="Notifications" asp-action="Index">
                            <i class="bi bi-bell fs-5"></i>
                            <span class="notification-badge">3</span>
                        </a>
                    </li>

                    <!-- ✅ User Profile -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" role="button" data-bs-toggle="dropdown">
                            <img src="https://ui-avatars.com/api/?name=Alex+Turner&background=10b981&color=fff" alt="Coach" class="user-avatar" />
                            <span>Alex Turner</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow">
                            <li><a class="dropdown-item" asp-controller="Coach" asp-action="Profile"><i class="bi bi-person me-2"></i> Profile</a></li>
                            <li><a class="dropdown-item" asp-controller="Coach" asp-action="Settings"><i class="bi bi-gear me-2"></i> Settings</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right me-2"></i> Logout</a></li>
                        </ul>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <!-- ✅ Main Content -->
    <main class="container-fluid mt-4 px-4">
        @RenderBody()
    </main>
    <!-- ✅ Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
