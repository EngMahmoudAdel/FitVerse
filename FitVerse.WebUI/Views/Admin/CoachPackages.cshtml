@model List<FitVerse.Core.ViewModels.Coach.CoachWithPackagesVM>

@{
    ViewData["Title"] = "Coach-Package Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var packages = ViewBag.Packages as List<FitVerse.Core.ViewModels.Package.PackageVM> ?? new();
}

<div class="container-fluid px-4 py-4">

    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Coach-Package Assignments</h2>
            <p class="text-muted mb-0">Manage which packages each coach can provide</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-controller="Admin" asp-action="Coaches" class="btn btn-outline-secondary">
                <i class="bi bi-person-badge me-2"></i> Manage Coaches
            </a>
            <a asp-controller="Package" asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-box-seam me-2"></i> Manage Packages
            </a>
        </div>
    </div>

    <!-- Matrix Card -->
    <div class="card-custom">
        <div class="card-header-custom">
            <i class="bi bi-table me-2"></i> Coach-Package Matrix
        </div>
        <div class="card-body-custom p-0">

            @if (!Model.Any() || !packages.Any())
            {
                <div class="alert alert-warning m-3 text-center">
                    <i class="bi bi-exclamation-circle"></i>
                    @( !Model.Any() ? "No coaches found." : "No packages found." )
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-custom mb-0 align-middle">
                        <thead>
                            <tr>
                                <th style="min-width: 200px;">Coach</th>
                                @foreach (var pkg in packages)
                                {
                                    <th class="text-center">@pkg.Name</th>
                                }
                                <th class="text-center">Total</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var coach in Model)
                            {
                                var total = coach.Packages.Count;
                                <tr>
                                    <form asp-action="AssignPackagesToCoach" asp-controller="Admin" method="post" class="coach-form">
                                        <input type="hidden" name="CoachId" value="@coach.Id" />

                                    <td>
                                        <div class="d-flex align-items-center gap-3">
                                            <img src="https://ui-avatars.com/api/?name=@coach.Name&background=10b981&color=fff"
                                                 alt="@coach.Name" style="width: 40px; height: 40px; border-radius: 50%;">
                                            <div>
                                                <strong>@coach.Name</strong>
                                                <div class="small text-muted">@coach.ExperienceYears years exp.</div>
                                            </div>
                                        </div>
                                    </td>

                                    @foreach (var pkg in packages)
                                    {
                                        var isAssigned = coach.Packages.Any(p => p.Id == pkg.Id);
                                        <td class="text-center">
                                            <div class="form-check form-switch d-inline-block">
                                                <input class="form-check-input" type="checkbox"
                                                       name="SelectedPackages" value="@pkg.Id"
                                                       @(isAssigned ? "checked" : "") />
                                            </div>
                                        </td>
                                    }

                                    <td class="text-center">
                                        <span class="badge bg-success">@total Packages</span>
                                    </td>

                                    <td class="text-center">
                                        <button type="submit" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-save me-1"></i> Save
                                        </button>
                                    </td>
                                    </form>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // ✅ SweetAlert تأكيد الحفظ
        document.querySelectorAll(".coach-form").forEach(form => {
            form.addEventListener("submit", function (e) {
                e.preventDefault();
                Swal.fire({
                    title: "Are you sure?",
                    text: "You are about to save these package assignments!",
                    icon: "question",
                    showCancelButton: true,
                    confirmButtonText: "Yes, save it!",
                    cancelButtonText: "Cancel",
                    confirmButtonColor: "#10b981"
                }).then(result => {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                });
            });
        });

        @if (TempData["SuccessMessage"] != null)
        {
                <text>
                Swal.fire({
                    icon: "success",
                    title: "Done!",
                    text: "@TempData["SuccessMessage"]",
                    showConfirmButton: false,
                    timer: 2000
                });
                </text>
        }
    </script>

    <style>
        .table-custom thead {
            background-color: #10b981;
            color: white;
        }

        .table-custom tbody tr:hover {
            background-color: #f8fafc;
        }

        .form-check-input:checked {
            background-color: #10b981;
            border-color: #10b981;
        }

        .card-custom {
            background: white;
            border-radius: 1rem;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        }

        .card-header-custom {
            background: #10b981;
            color: white;
            font-weight: 600;
            padding: 0.75rem 1rem;
            border-top-left-radius: 1rem;
            border-top-right-radius: 1rem;
        }

        .card-body-custom {
            padding: 1.25rem;
        }

        .btn-outline-primary {
            border-color: #10b981;
            color: #10b981;
        }

            .btn-outline-primary:hover {
                background: #10b981;
                color: white;
            }
    </style>
}
