 
<!-- Anatomy Content -->
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
 @model FitVerse.Core.ViewModels.Anatomy.AnatomyDashboardVM
<!-- Main Content -->
<div class="container-fluid px-4 py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Manage Anatomy</h2>
            <p class="text-muted mb-0">Add and manage body parts and anatomical information</p>
        </div>
        <button class="btn btn-primary-custom" data-bs-toggle="modal" data-bs-target="#addAnatomyModal">
            <i class="bi bi-plus-circle"></i> Add Body Part
        </button>
    </div>

    <!-- Stats -->
    <div class="row g-4 mb-4">
        <div class="col-lg-4 col-md-6">
            <div class="stat-card primary">
                <div class="stat-icon primary"><i class="bi bi-person-arms-up"></i></div>
                <div class="stat-value">@Model.AnatomyCount</div>
                <div class="stat-label">Body Parts</div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="stat-card success">
                <div class="stat-icon success"><i class="bi bi-heart-pulse"></i></div>
                <div class="stat-value">@Model.MuscleCount</div>
                <div class="stat-label">Linked Muscles</div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="stat-card warning">
                <div class="stat-icon warning"><i class="bi bi-lightning"></i></div>
                <div class="stat-value">@Model.ExerciseCount</div>
                <div class="stat-label">Related Exercises</div>
            </div>
        </div>
    </div>
  

    <!-- Body Parts Grid -->
<!-- 🧠 الكروت هنا -->
    <div id="anatomyContainer" class="row g-3">
        <!-- الكروت هتتحمل هنا من AJAX -->
    </div>
</div>

<!-- 🦵 Modal لعرض العضلات -->
<div class="modal fade" id="viewMusclesModal" tabindex="-1" aria-labelledby="viewMusclesLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewMusclesLabel">Muscles</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="musclesList" class="row g-3">
                    <!-- العضلات تتحمل هنا -->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Add Anatomy Modal -->
<div class="modal fade" id="addAnatomyModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="border-radius: 16px; border: none;">
            <div class="modal-header" style="background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%); color: white; border: none;">
                <h5 class="modal-title fw-bold">Add Body Part</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <form id="anatomyForm">
                    <div class="mb-3">
                        <label class="form-label-custom">Body Part Name</label>
                        <input type="text" id="Name" class="form-control-custom" placeholder="e.g., Chest">
                    </div>
                </form>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-outline-custom" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary-custom" id="saveAnatomyBtn">Add Body Part</button>
            </div>
        </div>
    </div>
</div>


<!-- Edit Anatomy Modal -->
<div class="modal fade" id="editAnatomyModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="border-radius: 16px; border: none;">
            <div class="modal-header" style="background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%); color: white; border: none;">
                <h5 class="modal-title fw-bold">Edit Body Part</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <form>
                    <div class="mb-3">
                        <label class="form-label-custom">Body Part Name</label>
                        <input type="text" class="form-control-custom" value="Chest">
                    </div>
                    <div class="mb-3">
                        <label class="form-label-custom">Category</label>
                        <select class="form-control-custom">
                            <option selected>Upper Body</option>
                            <option>Lower Body</option>
                            <option>Core</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label-custom">Description</label>
                        <textarea class="form-control-custom" rows="3">Pectoralis major and minor muscles...</textarea>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
   


