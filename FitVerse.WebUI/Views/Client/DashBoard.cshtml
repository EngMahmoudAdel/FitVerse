@{
    ViewData["Title"] = "Client";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}


    <!-- Main Content -->
    <div class="container-fluid px-4 py-4">
        <!-- Welcome Section -->
        <div class="row g-4 mb-4">
            <div class="col-lg-8">
                <div class="card-custom" style="background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%); color: white;">
                    <div class="card-body-custom">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h3 class="fw-bold mb-2">Welcome back, Sarah! 🎯</h3>
                                <p class="mb-3 opacity-90">You're doing great! Keep up the momentum and crush your fitness goals.</p>
                                <div class="d-flex gap-3 mb-3">
                                    <div>
                                        <div class="fw-bold fs-4">12</div>
                                        <small class="opacity-75">Days Active</small>
                                    </div>
                                    <div>
                                        <div class="fw-bold fs-4">45</div>
                                        <small class="opacity-75">Workouts Done</small>
                                    </div>
                                    <div>
                                        <div class="fw-bold fs-4">-5kg</div>
                                        <small class="opacity-75">Weight Lost</small>
                                    </div>
                                </div>
                                <button class="btn btn-light">
                                    <i class="bi bi-play-circle me-2"></i> Start Today's Workout
                                </button>
                            </div>
                            <div class="col-md-4 text-center d-none d-md-block">
                                <img src="https://images.unsplash.com/photo-1571019613454-1cb2f99b2d8b?w=200&h=200&fit=crop" alt="Fitness" class="img-fluid rounded-circle" style="width: 150px; height: 150px; object-fit: cover; border: 4px solid white;">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="profile-card">
                    <div class="profile-header">
                        <img src="https://ui-avatars.com/api/?name=Sarah+Miller&background=6366f1&color=fff&size=120" alt="Profile" class="profile-avatar">
                        <div class="profile-name">Sarah Miller</div>
                        <div class="profile-role">Pro Member</div>
                    </div>
                    <div class="profile-body">
                        <div class="profile-info-item">
                            <span class="profile-info-label">Coach</span>
                            <span class="profile-info-value">Alex Turner</span>
                        </div>
                        <div class="profile-info-item">
                            <span class="profile-info-label">Current Plan</span>
                            <span class="profile-info-value">Pro Package</span>
                        </div>
                        <div class="profile-info-item">
                            <span class="profile-info-label">Member Since</span>
                            <span class="profile-info-value">Jan 2024</span>
                        </div>
                        <button class="btn btn-outline-custom w-100 mt-3">
                            <i class="bi bi-pencil me-2"></i> Edit Profile
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="row g-4 mb-4">
            <div class="col-xl-3 col-md-6">
                <div class="stat-card primary">
                    <div class="stat-icon primary">
                        <i class="bi bi-fire"></i>
                    </div>
                    <div class="stat-value">2,450</div>
                    <div class="stat-label">Calories Burned</div>
                    <div class="stat-change positive">
                        <i class="bi bi-arrow-up"></i> This week
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="stat-card success">
                    <div class="stat-icon success">
                        <i class="bi bi-check-circle"></i>
                    </div>
                    <div class="stat-value">45</div>
                    <div class="stat-label">Workouts Completed</div>
                    <div class="stat-change positive">
                        <i class="bi bi-arrow-up"></i> +3 this week
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="stat-card warning">
                    <div class="stat-icon warning">
                        <i class="bi bi-clock"></i>
                    </div>
                    <div class="stat-value">18h</div>
                    <div class="stat-label">Total Training Time</div>
                    <div class="stat-change positive">
                        <i class="bi bi-arrow-up"></i> +2h this week
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="stat-card danger">
                    <div class="stat-icon danger">
                        <i class="bi bi-trophy"></i>
                    </div>
                    <div class="stat-value">12</div>
                    <div class="stat-label">Streak Days</div>
                    <div class="stat-change positive">
                        <i class="bi bi-arrow-up"></i> Keep it up!
                    </div>
                </div>
            </div>
        </div>

        <!-- Today's Workout & Progress -->
        <div class="row g-4 mb-4">
            <div class="col-lg-8">
                <div class="card-custom">
                    <div class="card-header-custom">
                        <i class="bi bi-calendar-check me-2"></i> Today's Workout Plan
                    </div>
                    <div class="card-body-custom">
                        <div class="mb-3">
                            <h5 class="fw-bold mb-2">Upper Body Strength</h5>
                            <p class="text-muted small mb-3">Focus on chest, back, and arms. Take 60-90 seconds rest between sets.</p>
                        </div>

                        <div class="exercise-item">
                            <input type="checkbox" class="exercise-checkbox" checked>
                            <div class="exercise-info exercise-completed">
                                <div class="exercise-name">Barbell Bench Press</div>
                                <div class="exercise-details">
                                    4 sets × 8-10 reps
                                    <span class="mx-2">•</span>
                                    <i class="bi bi-lightning-fill" style="color: #6366f1;"></i> Chest
                                </div>
                            </div>
                            <span class="badge-custom badge-success">Completed</span>
                        </div>

                        <div class="exercise-item">
                            <input type="checkbox" class="exercise-checkbox" checked>
                            <div class="exercise-info exercise-completed">
                                <div class="exercise-name">Dumbbell Rows</div>
                                <div class="exercise-details">
                                    4 sets × 10-12 reps
                                    <span class="mx-2">•</span>
                                    <i class="bi bi-lightning-fill" style="color: #10b981;"></i> Back
                                </div>
                            </div>
                            <span class="badge-custom badge-success">Completed</span>
                        </div>

                        <div class="exercise-item">
                            <input type="checkbox" class="exercise-checkbox">
                            <div class="exercise-info">
                                <div class="exercise-name">Shoulder Press</div>
                                <div class="exercise-details">
                                    3 sets × 10-12 reps
                                    <span class="mx-2">•</span>
                                    <i class="bi bi-lightning-fill" style="color: #ef4444;"></i> Shoulders
                                </div>
                            </div>
                            <span class="badge-custom badge-warning">In Progress</span>
                        </div>

                        <div class="exercise-item">
                            <input type="checkbox" class="exercise-checkbox">
                            <div class="exercise-info">
                                <div class="exercise-name">Bicep Curls</div>
                                <div class="exercise-details">
                                    3 sets × 12-15 reps
                                    <span class="mx-2">•</span>
                                    <i class="bi bi-lightning-fill" style="color: #f59e0b;"></i> Arms
                                </div>
                            </div>
                            <span class="badge-custom badge-info">Pending</span>
                        </div>

                        <div class="exercise-item">
                            <input type="checkbox" class="exercise-checkbox">
                            <div class="exercise-info">
                                <div class="exercise-name">Tricep Dips</div>
                                <div class="exercise-details">
                                    3 sets × 10-12 reps
                                    <span class="mx-2">•</span>
                                    <i class="bi bi-lightning-fill" style="color: #f59e0b;"></i> Arms
                                </div>
                            </div>
                            <span class="badge-custom badge-info">Pending</span>
                        </div>

                        <div class="mt-4 p-3" style="background: #f8fafc; border-radius: 12px;">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="fw-semibold">Workout Progress</span>
                                <span class="fw-bold" style="color: #6366f1;">40%</span>
                            </div>
                            <div class="progress" style="height: 8px; border-radius: 10px;">
                                <div class="progress-bar" style="width: 40%; background: linear-gradient(90deg, #6366f1, #4f46e5);"></div>
                            </div>
                        </div>

                        <div class="mt-3 d-flex gap-2">
                            <button class="btn btn-primary-custom flex-grow-1">
                                <i class="bi bi-play-circle me-2"></i> Continue Workout
                            </button>
                            <button class="btn btn-outline-custom">
                                <i class="bi bi-chat-left-text"></i> Send Feedback
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="progress-card">
                    <div class="progress-header">
                        <h5>Weight Progress</h5>
                        <button class="btn btn-sm btn-outline-custom">
                            <i class="bi bi-plus-circle"></i> Log Weight
                        </button>
                    </div>
                    <canvas id="weightChart"></canvas>

                    <div class="mt-4">
                        <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom">
                            <div>
                                <div class="text-muted small">Starting Weight</div>
                                <div class="fw-bold fs-5">75 kg</div>
                            </div>
                            <div class="text-end">
                                <div class="text-muted small">Current Weight</div>
                                <div class="fw-bold fs-5" style="color: #10b981;">70 kg</div>
                            </div>
                        </div>
                        <div class="text-center">
                            <div class="fw-bold fs-4" style="color: #10b981;">-5 kg</div>
                            <div class="text-muted small">Total Weight Lost</div>
                        </div>
                    </div>
                </div>

                <div class="card-custom mt-4">
                    <div class="card-header-custom">
                        <i class="bi bi-trophy me-2"></i> Achievements
                    </div>
                    <div class="card-body-custom">
                        <div class="d-flex gap-3 flex-wrap justify-content-center">
                            <div class="text-center">
                                <div style="width: 60px; height: 60px; background: rgba(99, 102, 241, 0.1); border-radius: 12px; display: flex; align-items: center; justify-content: center; font-size: 1.8rem; margin-bottom: 0.5rem;">
                                    🔥
                                </div>
                                <small class="fw-semibold">7 Day Streak</small>
                            </div>
                            <div class="text-center">
                                <div style="width: 60px; height: 60px; background: rgba(16, 185, 129, 0.1); border-radius: 12px; display: flex; align-items: center; justify-content: center; font-size: 1.8rem; margin-bottom: 0.5rem;">
                                    💪
                                </div>
                                <small class="fw-semibold">50 Workouts</small>
                            </div>
                            <div class="text-center">
                                <div style="width: 60px; height: 60px; background: rgba(245, 158, 11, 0.1); border-radius: 12px; display: flex; align-items: center; justify-content: center; font-size: 1.8rem; margin-bottom: 0.5rem;">
                                    ⚡
                                </div>
                                <small class="fw-semibold">Early Bird</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

