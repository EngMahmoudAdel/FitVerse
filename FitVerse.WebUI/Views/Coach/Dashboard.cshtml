@model FitVerse.Core.ViewModels.Coach.CoachDashboardViewModel
@{
   
    Layout = "~/Views/Shared/_CoachLayout.cshtml";
}
<!-- Main Content -->
<div class="container-fluid px-4 py-4">
    <!-- Page Header -->
    <div class="mb-4">
        <h2 class="fw-bold mb-1">Welcome back, Alex! 👋</h2>
        <p class="text-muted mb-0">Here's an overview of your coaching activities</p>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="stat-card primary">
                <div class="stat-icon primary">
                    <i class="bi bi-people"></i>
                </div>
                <div class="stat-value">156</div>
                <div class="stat-label">Active Clients</div>
                <div class="stat-change positive">
                    <i class="bi bi-arrow-up"></i> +8 this month
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="stat-card success">
                <div class="stat-icon success">
                    <i class="bi bi-calendar-check"></i>
                </div>
                <div class="stat-value">42</div>
                <div class="stat-label">Workout Plans</div>
                <div class="stat-change positive">
                    <i class="bi bi-arrow-up"></i> +5 this week
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="stat-card warning">
                <div class="stat-icon warning">
                    <i class="bi bi-lightning"></i>
                </div>
                <div class="stat-value">287</div>
                <div class="stat-label">Total Exercises</div>
                <div class="stat-change positive">
                    <i class="bi bi-arrow-up"></i> +12 this month
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="stat-card danger">
                <div class="stat-icon danger">
                    <i class="bi bi-star"></i>
                </div>
                <div class="stat-value">4.9</div>
                <div class="stat-label">Average Rating</div>
            </div>
        </div>
    </div>
    
</div>
<!-- Main Content Grid -->
<div class="row g-6 mb-4">

    <!-- Quick Actions (يمين) -->
    <div class="col-lg-4 order-lg-2">
        <div class="card-custom">
            <div class="card-header-custom">
                <i class="bi bi-lightning-charge me-2"></i> Quick Actions
            </div>
            <div class="card-body-custom">
                <div class="d-grid gap-3">
                    <button class="btn btn-success-custom" data-bs-toggle="modal" data-bs-target="#addExerciseModal">
                        <i class="bi bi-lightning me-2"></i> Add Exercise
                    </button>
                    <button class="btn btn-outline-custom" id="viewAllClientsBtn">
                        <i class="bi bi-people me-2"></i> View All Clients
                    </button>
                    <button class="btn btn-outline-custom">
                        <i class="bi bi-chat-dots me-2"></i> Open Messages
                    </button>
                </div>

                    <div class="divider"></div>

                <div class="text-center">
                    <h6 class="fw-bold mb-3">Your Performance</h6>
                    <canvas id="performanceChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Clients (شمال) -->
    <div class="col-lg-8 order-lg-1">
        <div class="card-custom">
            <div class="card-header-custom d-flex justify-content-between align-items-center">
                <span><i class="bi bi-people me-2"></i> Recent Clients</span>
                <a href="coach/index.html" class="text-white text-decoration-none small">View All</a>
            </div>
            <div class="card-body-custom">
                @if (Model.RecentClients != null && Model.RecentClients.Any())
                {
                    foreach (var client in Model.RecentClients)
                    {
                        <div class="d-flex align-items-center justify-content-between mb-3 pb-3 border-bottom">
                            <div class="d-flex align-items-center gap-3">
                                <div>
                                    <div class="fw-semibold">@client.Name</div>
                                    <div class="text-muted small">Last payment: @client.LastPaymentAgo</div>
                                </div>
                            </div>
                            <div class="text-end">
                                <span class="badge-custom @(client.IsActive ? "badge-success" : "badge-warning")">
                                    @(client.IsActive ? "Active" : "Inactive")
                                </span>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center text-muted">No clients found.</div>
                }
            </div>
        </div>
    </div>

</div>

                    <div class="text-center mt-3">
                        <a href="#" class="text-decoration-none fw-semibold" style="color: #6366f1;">View All Tasks</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Create Plan Modal -->
<div class="modal fade" id="createPlanModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content" style="border-radius: 16px; border: none;">
            <div class="modal-header" style="background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%); color: white; border: none;">
                <h5 class="modal-title fw-bold">Create Workout Plan</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <form>
                    <div class="mb-3">
                        <label class="form-label-custom">Plan Name</label>
                        <input type="text" class="form-control-custom" placeholder="e.g., Full Body Strength Training" required>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label class="form-label-custom">Assign to Client</label>
                            <select class="form-control-custom" required>
                                <option value="">Select Client</option>
                                <option>Sarah Miller</option>
                                <option>John Smith</option>
                                <option>Emma Davis</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label-custom">Duration (weeks)</label>
                            <input type="number" class="form-control-custom" placeholder="8" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label-custom">Description</label>
                        <textarea class="form-control-custom" rows="3" placeholder="Describe the workout plan goals and approach..."></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label-custom">Difficulty Level</label>
                        <select class="form-control-custom" required>
                            <option>Beginner</option>
                            <option>Intermediate</option>
                            <option>Advanced</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-outline-custom" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary-custom">Create Plan</button>
            </div>
        </div>
    </div>
</div>

<!-- Add Exercise Modal -->
<div class="modal fade" id="addExerciseModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content" style="border-radius: 16px; border: none;">
            <div class="modal-header" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; border: none;">
                <h5 class="modal-title fw-bold">Add New Exercise</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <form>
                    <div class="mb-3">
                        <label class="form-label-custom">Exercise Name</label>
                        <input type="text" class="form-control-custom" placeholder="e.g., Barbell Bench Press" required>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label class="form-label-custom">Muscle Group</label>
                            <select class="form-control-custom" required>
                                <option value="">Select Muscle Group</option>
                                <option>Chest</option>
                                <option>Back</option>
                                <option>Legs</option>
                                <option>Arms</option>
                                <option>Shoulders</option>
                                <option>Core</option>
                                <option>Cardio</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label-custom">Difficulty</label>
                            <select class="form-control-custom" required>
                                <option>Beginner</option>
                                <option>Intermediate</option>
                                <option>Advanced</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label-custom">Equipment</label>
                        <input type="text" class="form-control-custom" placeholder="e.g., Barbell, Bench">
                    </div>

                    <div class="mb-3">
                        <label class="form-label-custom">Description</label>
                        <textarea class="form-control-custom" rows="4" placeholder="Detailed instructions for performing the exercise..."></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label-custom">Video URL (Optional)</label>
                        <input type="url" class="form-control-custom" placeholder="https://youtube.com/...">
                    </div>
                </form>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-outline-custom" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success-custom">Add Exercise</button>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>



<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> 
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
