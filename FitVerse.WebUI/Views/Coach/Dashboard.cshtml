@model FitVerse.Core.ViewModels.Coach.CoachDashboardViewModel
@{
   
    Layout = "~/Views/Shared/_CoachLayout.cshtml";
}
<!-- Main Content -->
<div class="container-fluid px-4 py-4">
    <!-- Page Header -->
    <div class="mb-4">
        <h2 class="fw-bold mb-1">Welcome back, @ViewBag.CoachName! 👋</h2>
        <p class="text-muted mb-0">Here's an overview of your coaching activities</p>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="stat-card primary">
                <div class="stat-icon primary">
                    <i class="bi bi-people"></i>
                </div>
                <div class="stat-value">@Model.ActiveClientsCount</div>
                <div class="stat-label">Active Clients</div>
               
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="stat-card success">
                <div class="stat-icon success">
                    <i class="bi bi-calendar-check"></i>
                </div>
                <div class="stat-value">@Model.TotalPlans</div>
                <div class="stat-label">Workout Plans</div>
                
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="stat-card warning">
                <div class="stat-icon warning">
                    <i class="bi bi-lightning"></i>
                </div>
                <div class="stat-value">@Model.TotalExercises</div>
                <div class="stat-label">Total Exercises</div>
            
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="stat-card danger">
                <div class="stat-icon danger">
                    <i class="bi bi-star"></i>
                </div>
                <div class="stat-value">@Model.AverageRating</div>
                <div class="stat-label">Average Rating</div>
            </div>
        </div>
    </div>
    
</div>
<!-- Main Content Grid -->
<div class="row g-6 mb-4">

    <!-- Quick Actions (يمين) -->
    <div class="col-lg-4 order-lg-2">
        <div class="card-custom">
            <div class="card-header-custom">
                <i class="bi bi-lightning-charge me-2"></i> Quick Actions
            </div>
            <div class="card-body-custom">
                <div class="d-grid gap-3">
                    <button class="btn btn-success-custom" data-bs-toggle="modal" data-bs-target="#addExerciseModal">
                        <i class="bi bi-lightning me-2"></i> Add Exercise
                    </button>
                    <button class="btn btn-outline-custom" id="viewAllClientsBtn">
                        <i class="bi bi-people me-2"></i> View All Clients
                    </button>
                    <button class="btn btn-outline-custom">
                        <i class="bi bi-chat-dots me-2"></i> Open Messages
                    </button>
                </div>

                    <div class="divider"></div>

                <div class="text-center">
                    <h6 class="fw-bold mb-3">Your Performance</h6>
                    <canvas id="performanceChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Clients (شمال) -->
    <div class="col-lg-8 order-lg-1">
        <div class="card-custom">
            <div class="card-header-custom d-flex justify-content-between align-items-center">
                <span><i class="bi bi-people me-2"></i> Recent Clients</span>
                <a href="coach/index.html" class="text-white text-decoration-none small">View All</a>
            </div>
            <div class="card-body-custom">
                @if (Model.RecentClients != null && Model.RecentClients.Any())
                {
                    foreach (var client in Model.RecentClients)
                    {
                        <div class="d-flex align-items-center justify-content-between mb-3 pb-3 border-bottom">
                            <div class="d-flex align-items-center gap-3">
                                <div>
                                    <div class="fw-semibold">@client.Name</div>
                                    <div class="text-muted small">Last payment: @client.LastPaymentAgo</div>
                                </div>
                            </div>
                            <div class="text-end">
                                <span class="badge-custom @(client.IsActive ? "badge-success" : "badge-warning")">
                                    @(client.IsActive ? "Active" : "Inactive")
                                </span>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center text-muted">No clients found.</div>
                }
            </div>
        </div>
    </div>

</div>

<div class="modal fade" id="viewAllClientsModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content" style="border-radius: 16px;">
            <div class="modal-header" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white;">
                <h5 class="modal-title fw-bold">All Clients</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="allClientsContainer">
                <div class="text-center text-muted">Loading...</div>
            </div>
        </div>
    </div>
</div>



<!-- Add Exercise Modal -->
<!-- 🟢 Add Exercise Modal -->
<div class="modal fade" id="addExerciseModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content shadow-lg border-0" style="border-radius: 16px;">

            <!-- 🟢 Header -->
            <div class="modal-header text-white" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); border: none;">
                <h5 class="modal-title fw-bold">Add New Exercise</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <!-- 🟢 Body -->
            <div class="modal-body p-4">
                <form id="exerciseForm">

                    <!-- Exercise Name -->
                    <div class="mb-3">
                        <label for="Name" class="form-label-custom">Exercise Name</label>
                        <input type="text" id="Name" class="form-control-custom" placeholder="e.g., Barbell Bench Press" required>
                    </div>

                    <!-- Muscle + Equipment -->
                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label for="muscleId" class="form-label-custom">Muscle Group</label>
                            <select id="muscleId" class="form-control-custom" required>
                                <option value="" disabled selected>Loading muscles...</option>
                            </select>
                        </div>

                        <div class="col-md-6">
                            <label for="equipmentId" class="form-label-custom">Equipment</label>
                            <select id="equipmentId" class="form-control-custom" required>
                                <option value="" disabled selected>Loading equipment...</option>
                            </select>
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="mb-3">
                        <label for="description" class="form-label-custom">Description</label>
                        <textarea id="description" class="form-control-custom" rows="4"
                                  placeholder="Detailed instructions for performing the exercise..." required></textarea>
                    </div>

                    <!-- Video Link -->
                    <div class="mb-3">
                        <label for="videoLink" class="form-label-custom">Video URL (Optional)</label>
                        <input type="url" id="videoLink" class="form-control-custom" placeholder="https://youtube.com/...">
                    </div>
                </form>
            </div>

            <!-- 🟢 Footer -->
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-outline-custom" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="saveExerciseBtn" class="btn btn-success-custom">Add Exercise</button>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>



<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> 
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="/ViewJs/coachDashboard.js"></script>