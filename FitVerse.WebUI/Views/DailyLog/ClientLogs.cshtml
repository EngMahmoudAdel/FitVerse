@model IEnumerable<FitVerse.Data.Models.DailyLog>
@{
    ViewData["Title"] = "Daily Progress Log";
    Layout = "~/Views/Shared/_CoachLayout.cshtml";
}

<h2 class="text-primary mb-3">📅 Daily Progress Log</h2>

<form asp-action="AddClientLog" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label>Your Daily Notes</label>
        <textarea name="ClientNotes" class="form-control" rows="3" required></textarea>
    </div>

    <div class="mb-3">
        <label>Current Weight (kg)</label>
        <input name="CurrentWeight" type="number" step="0.1" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Upload Today's Photo</label>
        <input type="file" name="Photo" class="form-control" />
    </div>

    <input type="hidden" name="ClientId" value="@User.FindFirst("Id")?.Value" />
    <input type="hidden" name="CoachId" value="COACH_ID_HERE" />

    <button type="submit" class="btn btn-primary mt-2">💾 Save Log</button>
</form>

<hr class="my-4" />

<h4>📘 Previous Logs</h4>

@foreach (var log in Model)
{
    <div class="card mt-3 shadow-sm">
        <div class="card-body">
            <b>@log.LogDate.ToShortDateString()</b>
            <p class="mb-1"><b>Weight:</b> @log.CurrentWeight kg</p>
            <p>@log.ClientNotes</p>

            @if (!string.IsNullOrEmpty(log.PhotoPath))
            {
                <img src="@log.PhotoPath" alt="Daily photo" class="img-fluid rounded mt-2" style="max-height: 300px;" />
            }

            @if (log.IsReviewed)
            {
                <div class="alert alert-success mt-3">
                    <b>💬 Coach Feedback:</b> @log.CoachFeedback <br />
                    ⭐ <b>Rating:</b> @log.CoachRating
                </div>
            }
        </div>
    </div>
}
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var successMessage = '@TempData["SuccessMessage"]';
            var errorMessage = '@TempData["ErrorMessage"]';

            if (successMessage && successMessage.length > 0) {
                Swal.fire({
                    icon: 'success',
                    title: 'Saved',
                    text: successMessage,
                    timer: 2500,
                    timerProgressBar: true
                });
            }

            if (errorMessage && errorMessage.length > 0) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: errorMessage,
                });
            }
        });
    </script>
}
