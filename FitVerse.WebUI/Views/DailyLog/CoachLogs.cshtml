@model IEnumerable<FitVerse.Data.Models.DailyLog>

@{
    ViewData["Title"] = "Client Daily Logs";
    Layout = "~/Views/Shared/_CoachLayout.cshtml";
}

<h2>👨‍🏫 Client Daily Logs</h2>

@foreach (var log in Model)
{
    <div class="card mt-3 p-3 shadow-sm">
        <div class="d-flex align-items-center mb-2">
            @if (!string.IsNullOrEmpty(log.Client?.User.ImagePath))
            {
                <img src="@log.Client.User.ImagePath" alt="@log.Client.User.FullName" class="rounded-circle me-2" width="50" height="50" />
            }
            <h5 class="mb-0">@log.Client?.User.FullName</h5>
        </div>

        <p class="text-muted mb-1"><b>📅</b> @log.LogDate.ToShortDateString()</p>
        <p><b>⚖️ الوزن:</b> @log.CurrentWeight كجم</p>
        <p><b>📝 الملاحظات:</b> @log.ClientNotes</p>

        @if (!string.IsNullOrEmpty(log.PhotoPath))
        {
            <img src="@log.PhotoPath" alt="Daily Photo" class="img-fluid rounded mt-2" style="max-height:300px;" />
        }

        @if (!log.IsReviewed)
        {
            <form asp-action="ReviewLog" method="post" class="mt-3">
                <input type="hidden" name="id" value="@log.Id" />
                <div class="mb-2">
                    <textarea name="feedback" class="form-control" placeholder="اكتب ملاحظاتك..." required></textarea>
                </div>
                <div class="mb-2">
                    <input type="number" name="rating" min="1" max="5" class="form-control" placeholder="تقييم (1-5)" required />
                </div>
                <button type="submit" class="btn btn-success">إرسال الرد ✅</button>
            </form>
        }
        else
        {
            <div class="alert alert-info mt-3">
                💬 <b>رد الكوتش:</b> @log.CoachFeedback <br />
                ⭐ <b>التقييم:</b> @log.CoachRating
            </div>
        }
    </div>
}
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var successMessage = '@TempData["SuccessMessage"]';
            var errorMessage = '@TempData["ErrorMessage"]';

            if (successMessage && successMessage.length > 0) {
                Swal.fire({
                    icon: 'success',
                    title: 'تم الحفظ',
                    text: successMessage,
                    confirmButtonColor: '#3085d6',
                    timer: 2500,
                    timerProgressBar: true
                });
            }

            if (errorMessage && errorMessage.length > 0) {
                Swal.fire({
                    icon: 'error',
                    title: 'خطأ',
                    text: errorMessage,
                    confirmButtonColor: '#d33',
                });
            }
        });
    </script>
}
