@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
<link rel="stylesheet" href="css/style.css">
<!-- Main Content -->
<div class="container-fluid px-4 py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Manage Equipment</h2>
            <p class="text-muted mb-0">Add and manage gym equipment used in exercises</p>
        </div>
        <button id="openAddModal" class="btn btn-primary-custom mb-3">
            <i class="bi bi-plus-lg me-1"></i> Add Equipment
        </button>
    </div>

    <!-- Stats -->
    <div class="row g-4 mb-4">
        <div class="col-lg-6 col-md-6 col-12">
            <div class="stat-card primary w-100">
                <div class="stat-icon primary"><i class="bi bi-tools"></i></div>
                <div class="stat-value" id="totalEquipmentCount">0</div>
                <div class="stat-label">Total Equipment</div>
            </div>
        </div>

        <div class="col-lg-6 col-md-6 col-12">
            <div class="stat-card success w-100">
                <div class="stat-icon success"><i class="bi bi-lightning"></i></div>
                <div class="stat-value" id="totalExerciseCount">0</div>
                <div class="stat-label">Exercises Using Equipment</div>
            </div>
        </div>
    </div>


    <!-- Search -->
   
    </div>
    <div class="card-custom mb-4">
        <div class="card-body-custom">
            <div class="row justify-content-center">
                <div class="col-lg-6 col-md-8 col-sm-10">
                    <input type="text" id="searchEquipment" class="form-control-custom w-100" placeholder="Search equipments...">
                </div>
            </div>
        </div>
    </div>


    <!-- Equipment Grid -->
    <div id="equipmentContainer" class="row g-4">
        <!-- Equipment items will be loaded here dynamically -->
    </div>
</div>

<!-- 🌟 Add Equipment Modal -->
<div class="modal fade" id="addEquipmentModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg border-0" style="border-radius: 18px;">
            <div class="modal-header text-white"
                 style="background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%); border: none; border-top-left-radius: 18px; border-top-right-radius: 18px;">
                <h5 class="modal-title fw-semibold">
                    <i class="bi bi-plus-circle me-2"></i> Add New Equipment
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body p-4">
                <form id="equipmentForm">
                    <div class="mb-3">
                        <label class="form-label-custom">Equipment Name</label>
                        <input type="text" id="equipmentName" class="form-control-custom" placeholder="e.g., Barbell" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label-custom">Equipment Image</label>
                        <input type="file" id="equipmentImage" accept="image/*" class="form-control-custom">
                        <div class="text-center mt-3">
                            <img id="addImagePreview" src="#" alt="Preview" class="rounded shadow-sm" style="display:none; height:100px; object-fit:cover;">
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-outline-custom" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i> Cancel
                </button>
                <button type="button" id="saveEquipmentBtn" class="btn btn-primary-custom">
                    <i class="bi bi-check-circle me-1"></i> Save
                </button>
            </div>
        </div>
    </div>
</div>


<!-- ✏️ Edit Equipment Modal -->
<div class="modal fade" id="editEquipmentModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg border-0" style="border-radius: 18px;">
            <div class="modal-header text-white"
                 style="background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%); border: none; border-top-left-radius: 18px; border-top-right-radius: 18px;">
                <h5 class="modal-title fw-semibold">
                    <i class="bi bi-pencil-square me-2"></i> Edit Equipment
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body p-4">
                <form id="editEquipmentForm">
                    <div class="mb-3">
                        <label class="form-label-custom">Equipment Name</label>
                        <input type="text" id="editEquipmentName" class="form-control-custom" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label-custom">Current Image</label>
                        <div class="text-center mb-3">
                            <img id="currentEquipmentImage" src="/Images/default.jpg" alt="Current" class="rounded shadow-sm" style="height:100px; object-fit:cover;">
                        </div>
                        <label class="form-label-custom">Change Image (optional)</label>
                        <input type="file" id="editEquipmentImage" accept="image/*" class="form-control-custom">
                        <div class="text-center mt-3">
                            <img id="editImagePreview" src="#" alt="Preview" class="rounded shadow-sm" style="display:none; height:100px; object-fit:cover;">
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-outline-custom" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i> Cancel
                </button>
                <button type="button" id="editSaveBtn" class="btn btn-primary-custom">
                    <i class="bi bi-check-circle me-1"></i> Save Changes
                </button>
            </div>
        </div>
    </div>
</div>


<!-- 🌈 Custom Styles -->
<style>
    .form-label-custom {
        font-weight: 600;
        color: #374151;
        margin-bottom: 6px;
        display: block;
    }

    .form-control-custom {
        border-radius: 10px;
        border: 1px solid #d1d5db;
        padding: 10px 12px;
        transition: all 0.2s ease-in-out;
    }

        .form-control-custom:focus {
            border-color: #6366f1;
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.2);
        }

    .btn-primary-custom {
        background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
        border: none;
        color: white;
        font-weight: 600;
        border-radius: 10px;
        padding: 8px 20px;
        transition: all 0.25s ease-in-out;
    }

        .btn-primary-custom:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 10px rgba(99, 102, 241, 0.3);
        }

    .btn-outline-custom {
        border: 2px solid #6366f1;
        color: #6366f1;
        font-weight: 600;
        border-radius: 10px;
        padding: 8px 20px;
        transition: all 0.25s ease-in-out;
        background: white;
    }

        .btn-outline-custom:hover {
            background: #6366f1;
            color: white;
            box-shadow: 0 4px 10px rgba(99, 102, 241, 0.3);
        }
</style>


<!-- 🖼️ JavaScript لعرض معاينة الصور -->
<script>
        // Preview عند الإضافة
        document.getElementById('equipmentImage').addEventListener('change', function (event) {
            const preview = document.getElementById('addImagePreview');
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = e => {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                };
                reader.readAsDataURL(file);
            } else {
                preview.style.display = 'none';
            }
        });

        // Preview عند التعديل
        document.getElementById('editEquipmentImage').addEventListener('change', function (event) {
            const preview = document.getElementById('editImagePreview');
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = e => {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                };
                reader.readAsDataURL(file);
            }
                else {
                    preview.style.display = 'none';
                }
                    });
</script>






<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
