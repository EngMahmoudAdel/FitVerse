    <!-- Main Content -->
    <main class="main-content">
        <!-- Top Navigation -->
        <header class="top-nav">
            <div class="search-bar">
                <i class="fas fa-search"></i>
                <input type="text" placeholder="Search...">
            </div>
            <div class="nav-right">
                <button class="notification-btn">
                    <i class="far fa-bell"></i>
                    <span class="notification-badge">3</span>
                </button>
                <div class="theme-toggle">
                    <input type="checkbox" id="theme-switch" class="theme-switch">
                    <label for="theme-switch" class="theme-toggle-label">
                        <i class="fas fa-moon"></i>
                        <i class="fas fa-sun"></i>
                        <span class="theme-toggle-ball"></span>
                    </label>
                </div>
            </div>
        </header>

        <!-- Equipment Content -->
        <div class="content-area">
            <div class="page-header">
                <h1>Equipment</h1>
                <div class="breadcrumb">
                    <a href="index.html">Home</a> / <span>Equipment</span>
                </div>
            </div>

            <!-- Equipment Form Section -->
            <div class="form-section">
                <div class="form-card">
                    <div class="form-header">
                        <h3>Add New Equipment Record</h3>
                        <p>Fill in the details below to add a new equipment record</p>
                    </div>
                    <form id="equipmentForm" class="equipment-form">
                        <div class="form-group">
                            <label for="name">Name <span class="required">*</span></label>
                            <div class="input-group">
                                <i class="fas fa-tag"></i>
                                <input type="text" id="name" name="name" placeholder="Enter Equipment name" required>
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="reset" class="btn btn-outline">
                                <i class="fas fa-undo"></i> Reset
                            </button>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Save Record
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Equipment List Section -->
            <div class="table-section">
                <div class="section-header">
                    <div class="section-title">
                        <h3>Equipment Records</h3>
                        <p class="section-subtitle">List of all equipment records</p>
                    </div>
                    <div class="table-actions">
                        <div class="search-box">
                            <i class="fas fa-search"></i>
                            <input type="text" id="searchEquipment" placeholder="Search records...">
                        </div>
                        <button class="btn btn-primary btn-icon">
                            <i class="fas fa-download"></i> Export
                        </button>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Created At</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Sample data rows -->
                            <tr>
                                <td>#1</td>
                                <td>Shoulders</td>
                                <td>Oct 10, 2025</td>
                                <td><span class="status-badge active">Active</span></td>
                                <td class="actions">
                                    <button class="btn-icon" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn-icon text-danger" title="Delete">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td>#2</td>
                                <td>Back</td>
                                <td>Oct 9, 2025</td>
                                <td><span class="status-badge active">Active</span></td>
                                <td class="actions">
                                    <button class="btn-icon" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn-icon text-danger" title="Delete">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td>#3</td>
                                <td>Chest</td>
                                <td>Oct 8, 2025</td>
                                <td><span class="status-badge inactive">Inactive</span></td>
                                <td class="actions">
                                    <button class="btn-icon" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn-icon text-danger" title="Delete">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="table-footer">
                    <div class="table-info">
                        Showing <span>1</span> to <span>3</span> of <span>3</span> entries
                    </div>
                    <div class="pagination">
                        <button class="btn-icon" disabled>
                            <i class="fas fa-chevron-left"></i>
                        </button>
                        <button class="btn-icon active">1</button>
                        <button class="btn-icon" disabled>
                            <i class="fas fa-chevron-right"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

<!-- Confirmation Modal -->
<div class="modal" id="deleteModal">
    <div class="modal-content">
        <div class="modal-header">
            <h4>Confirm Deletion</h4>
            <button class="btn-icon close-modal">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="modal-body">
            <p>Are you sure you want to delete this record? This action cannot be undone.</p>
        </div>
        <div class="modal-footer">
            <button class="btn btn-outline close-modal">Cancel</button>
            <button class="btn btn-danger">Delete</button>
        </div>
    </div>
</div>
