@{
    ViewData["Title"] = "Exercise Library";
    Layout = "~/Views/Shared/_CoachLayout.cshtml";

}

<style>

    /* ========================================
           Buttons
           ======================================== */

    .btn-custom {
        padding: 0.625rem 1.5rem;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
        border: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-primary-custom {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
        color: white;
    }

        .btn-primary-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(99, 102, 241, 0.3);
        }

    .btn-success-custom {
        background: var(--secondary-color);
        color: white;
    }

        .btn-success-custom:hover {
            background: #059669;
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(16, 185, 129, 0.3);
        }

    .btn-danger-custom {
        background: var(--danger-color);
        color: white;
    }

        .btn-danger-custom:hover {
            background: #dc2626;
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(239, 68, 68, 0.3);
        }

    .btn-outline-custom {
        background: transparent;
        border: 2px solid var(--primary-color);
        color: var(--primary-color);
    }

        .btn-outline-custom:hover {
            background: var(--primary-color);
            color: white;
        }

    .form-control-custom {
        display: block;
        width: 100%;
        padding: 0.55rem 0.75rem;
        border-radius: 8px;
        border: 1px solid #ddd;
    }

    label.form-label-custom {
        font-weight: 500;
        color: #374151;
        margin-bottom: 6px;
    }

    .dropdown-menu {
        z-index: 1050 !important;
    }

    .workout-card {
        overflow: visible !important;
        position: relative;
    }

    .btn-outline-custom {
        border: none !important;
        background: transparent !important;
        color: #555;
        font-size: 1.2rem;
    }

        .btn-outline-custom:hover {
            color: #000;
        }
</style>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

<div class="container-fluid px-4 py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Exercise Library</h2>
            <p class="text-muted mb-0">Manage your custom exercises and workouts</p>
        </div>
        <div>
            <button class="btn btn-primary-custom" data-bs-toggle="modal" data-bs-target="#addExerciseModal">
                <i class="bi bi-plus-circle"></i> Add New Exercise
            </button>
        </div>
    </div>

    <!-- Search -->
    <div class="row align-items-center mb-3">
        <div class="col-md-4">
            <input type="text" id="searchInput" class="form-control-custom" placeholder="Search exercises...">
        </div>
    </div>

    <!-- Exercise Cards -->
    <div class="row g-4" id="exerciseContainer">
        <!-- Cards load dynamically -->
    </div>

    <div class="d-flex justify-content-center mt-4">
        <nav>
            <ul class="pagination"></ul>
        </nav>
    </div>

</div>

<!-- Add/Edit Modal -->
<div class="modal fade" id="addExerciseModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content" style="border-radius: 16px; border: none;">
            <div class="modal-header" style="background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%); color: white; border: none;">
                <h5 class="modal-title fw-bold">Add / Edit Exercise</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body p-4">
                <form id="exerciseForm" enctype="multipart/form-data">
                    <input type="hidden" id="exerciseId" />

                    <div class="mb-3">
                        <label class="form-label-custom" for="Name">Exercise Name</label>
                        <input type="text" class="form-control-custom" id="Name" name="Name" placeholder="e.g., Barbell Bench Press" required>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label class="form-label-custom" for="muscleId">Muscle Group</label>
                            <select class="form-control-custom" id="muscleId" name="muscleId" required>
                                <option value="" disabled selected>Select muscle</option>
                            </select>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label-custom" for="equipmentId">Equipment</label>
                            <select class="form-control-custom" id="equipmentId" name="equipmentId" required>
                                <option value="" disabled selected>Select equipment</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label-custom" for="description">Description</label>
                        <textarea class="form-control-custom" id="description" name="description" rows="4" placeholder="Detailed instructions for performing the exercise..."></textarea>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label class="form-label-custom" for="videoLink">Video URL (Optional)</label>
                            <input type="url" class="form-control-custom" id="videoLink" name="videoLink" placeholder="https://youtube.com/...">
                        </div>

                        <div class="col-md-6">
                            <label class="form-label-custom" for="exerciseImage">Image Upload</label>
                            <input type="file" class="form-control-custom" id="exerciseImage" name="exerciseImage" accept="image/*">
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer border-0">
                <button type="button" class="btn btn-outline-custom" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" form="exerciseForm" class="btn btn-primary-custom" id="saveBtn">Save Exercise</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/ViewJs/exercise.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

}
