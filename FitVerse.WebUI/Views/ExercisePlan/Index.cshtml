@{
    Layout = "~/Views/Shared/_CoachLayout.cshtml";
}
@model IEnumerable<FitVerse.Data.Models.ExercisePlan>

<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold">Workout Plans</h3>
        <button class="btn btn-primary-custom" data-bs-toggle="modal" data-bs-target="#createPlanModal">
            <i class="bi bi-plus-circle me-1"></i> Add Plan
        </button>
    </div>

    <!-- Plans List -->
    <div class="row g-4" id="plansContainer">
        <!-- plans will load here -->
    </div>

</div>

<!-- ✅ Create Plan Modal -->
<div class="modal fade" id="createPlanModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content" style="border-radius: 16px; border: none;">
            <div class="modal-header" style="background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%); color: white;">
                <h5 class="modal-title fw-bold">Create Workout Plan</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body p-4">
                <form id="createPlanForm">
                    <div class="row g-4">

                        <!-- Left side: Plan details -->
                        <div class="col-md-5">
                            <div class="mb-3">
                                <label class="form-label-custom fw-bold">Plan Name</label>
                                <input type="text" name="Name" class="form-control-custom" placeholder="e.g., Full Body Strength" required>
                            </div>

                            <div class="mb-3">
                                <label class="form-label-custom fw-bold">Duration (weeks)</label>
                                <input type="number" name="DurationWeeks" class="form-control-custom" placeholder="8">
                            </div>

                            <div class="mb-3">
                                <label class="form-label-custom fw-bold">Notes</label>
                                <textarea name="Notes" class="form-control-custom" rows="4" placeholder="Description or notes..."></textarea>
                            </div>
                        </div>

                        <!-- Right side: Exercises checkboxes -->
                        <div class="col-md-7">
                            <label class="form-label-custom fw-bold mb-2">Select Exercises</label>
                            <div id="exerciseCheckboxes" class="row g-2"
                                 style="max-height: 350px; overflow-y: auto; border: 1px solid #ddd; border-radius: 10px; padding: 12px;">
                                <!-- checkboxes will load here via AJAX -->
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer border-0">
                <button type="button" class="btn btn-outline-custom" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary-custom" id="savePlanBtn">Create Plan</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/ViewJs/ExercisePlan.js"></script>
}
