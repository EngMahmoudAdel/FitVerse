 <form enctype="multipart/form-data">
		<!-- Exercise Content -->
		<div class="content-area">
			<div class="page-header">
				<h1>Exercise</h1>
				<div class="breadcrumb">
					<a href="index.html">Home</a> / <span>Exercise</span>
				</div>
			</div>
        <!-- ========================= -->
        <!-- Add / Edit Exercise Form -->
        <!-- ========================= -->

        <section class="container my-5">
            <div class="card shadow-lg border-0" style="border-radius: 16px;">
                <!-- Header -->
                <div class="card-header text-white"
                     style="background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%); border-radius: 16px 16px 0 0;">
                    <h4 class="fw-bold mb-0">
                        <i class="fas fa-dumbbell me-2"></i> Add / Edit Exercise
                    </h4>
                    <small>Fill in the details below to manage exercises</small>
                </div>

                <!-- Body -->
                <div class="card-body p-4">
                    <form id="exerciseForm">
                        <input type="hidden" id="exerciseId" name="exerciseId" />

                        <!-- Row 1: Name + Muscle -->
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label class="form-label-custom">Exercise Name <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <i class="fas fa-tag input-icon"></i>
                                    <input type="text" class="form-control-custom"
                                           id="exerciseName" name="exerciseName"
                                           placeholder="Enter exercise name" required>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label-custom">Muscle <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <i class="fas fa-person-running input-icon"></i>
                                    <select class="form-control-custom" id="muscleId" name="muscleId" required>
                                        <option value="" disabled selected>Select muscle</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- Row 2: Equipment + Video -->
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label class="form-label-custom">Equipment <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <i class="fas fa-cog input-icon"></i>
                                    <select class="form-control-custom" id="equipmentId" name="equipmentId" required>
                                        <option value="" disabled selected>Select equipment</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label-custom">Video Link</label>
                                <div class="input-group">
                                    <i class="fas fa-link input-icon"></i>
                                    <input type="url" class="form-control-custom"
                                           id="videoLink" name="videoLink"
                                           placeholder="https://youtube.com/...">
                                </div>
                            </div>
                        </div>

                        <!-- Row 3: Description -->
                        <div class="mb-3">
                            <label class="form-label-custom">Description</label>
                            <div class="input-group">
                                <i class="fas fa-align-left input-icon"></i>
                                <textarea class="form-control-custom" id="description"
                                          name="description" rows="4"
                                          placeholder="Describe the exercise (optional)"></textarea>
                            </div>
                        </div>

                        <!-- ✅ New Part: Image Upload -->
                        <div class="mb-4">
                            <label class="form-label-custom">Image Upload</label>
                            <div class="input-group">
                                <i class="fas fa-image input-icon"></i>
                                <input type="file" class="form-control-custom"
                                       id="exerciseImage" name="exerciseImage"
                                       accept="image/*">
                            </div>
                        </div>

                        <!-- Footer / Actions -->
                        <div class="d-flex justify-content-end gap-2">
                            <button type="reset" class="btn btn-outline-custom" id="resetBtn">
                                <i class="fas fa-undo"></i> Reset
                            </button>
                            <button type="submit" class="btn btn-primary-custom" id="saveBtn">
                                <i class="fas fa-save"></i> Save Exercise
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </section>

        <!-- ========================= -->
        <!-- ✅ Custom CSS for Styling -->
        <!-- ========================= -->
        <style>
            .form-label-custom {
                font-weight: 600;
                margin-bottom: 6px;
                color: #374151;
            }

            .form-control-custom {
                width: 100%;
                padding: 10px 12px 10px 36px;
                border-radius: 10px;
                border: 1px solid #d1d5db;
                transition: 0.3s;
            }

                .form-control-custom:focus {
                    border-color: #6366f1;
                    box-shadow: 0 0 0 0.2rem rgba(99, 102, 241, 0.25);
                    outline: none;
                }

            .input-group {
                position: relative;
            }

            .input-icon {
                position: absolute;
                top: 50%;
                left: 10px;
                transform: translateY(-50%);
                color: #6b7280;
                pointer-events: none;
            }

            .btn-primary-custom {
                background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
                border: none;
                color: white;
                border-radius: 8px;
                padding: 10px 18px;
                font-weight: 600;
                transition: 0.3s;
            }

                .btn-primary-custom:hover {
                    background: linear-gradient(135deg, #4f46e5 0%, #4338ca 100%);
                }

            .btn-outline-custom {
                border: 1px solid #6366f1;
                color: #6366f1;
                border-radius: 8px;
                padding: 10px 18px;
                font-weight: 600;
                transition: 0.3s;
            }

                .btn-outline-custom:hover {
                    background: #6366f1;
                    color: white;
                }
        </style>

			<!-- Exercise List Section -->
			<div class="table-section">
				<div class="section-header">
					<div class="section-title">
						<h3>Exercise Records</h3>
						<p class="section-subtitle">List of all exercise records</p>
					</div>
					<div class="table-actions">
						<div class="search-box">
							<i class="fas fa-search"></i>
							<input type="text" id="searchExercise" placeholder="Search records...">
						</div>
						<button class="btn btn-primary btn-icon" id="exportBtn">
							<i class="fas fa-download"></i> Export
						</button>
					</div>
				</div>

				<div class="table-responsive">
					<table class="data-table" id="exerciseTable">
						<thead>
							<tr>
								<th>ID</th>
								<th>Name</th>
								<th>Muscle</th>
								<th>Equipment</th>
								<th>Video</th>
								<th>Description</th>
								<th>Actions</th>
							</tr>
						</thead>
						<tbody>
							<!-- Dynamic rows -->
						</tbody>
					</table>
				</div>

				<div class="table-footer">
					<div class="table-info" id="tableInfo">
						Showing <span>0</span> to <span>0</span> of <span>0</span> entries
					</div>
					<div class="pagination">
						<button class="btn-icon" id="prevPage">
							<i class="fas fa-chevron-left"></i>
						</button>
						<div class="page-numbers">
							<button class="btn-icon page-btn active" id="currentPageBtn">1</button>
						</div>
						<button class="btn-icon" id="nextPage">
							<i class="fas fa-chevron-right"></i>
						</button>
					</div>
				</div>
			</div>
		</div>
	</main>
</div>

<!-- Confirmation Modal -->
<div class="modal" id="deleteModal">
	<div class="modal-content">
	<div class="modal-content">
		<div class="modal-header">
			<h4>Confirm Deletion</h4>
			<button class="btn-icon close-modal">
				<i class="fas fa-times"></i>
			</button>
		</div>
		<div class="modal-body">
			<p>Are you sure you want to delete this record? This action cannot be undone.</p>
		</div>
		<div class="modal-footer">
			<button class="btn btn-outline close-modal">Cancel</button>
			<button class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
		</div>
	</div>
</div>
</form>
@section Scripts{

	<script src="js/exercise.js"></script>
} 