  <!-- Muscle Content -->
<div class="content-area">
    <div class="page-header">
        <h1>Muscle</h1>
        <div class="breadcrumb">
            <a href="index.html">Home</a> / <span>Muscle</span>
        </div>
    </div>

    <!-- Muscle Form Section -->
    <div class="form-section">
        <div class="form-card">
            <div class="form-header">
                <h3>Manage Muscles</h3>
                <p>Fill in the details below to add or edit a muscle</p>
            </div>

            <form id="muscleForm" class="anatomy-form">
                <input type="hidden" id="muscleId" />

                <div class="form-row">
                    <div class="form-group">
                        <label for="Name">Muscle Name <span class="required">*</span></label>
                        <div class="input-group">
                            <i class="fas fa-dumbbell"></i>
                            <input type="text" id="Name" name="Name" placeholder="e.g., Biceps, Triceps, Quadriceps" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="AnatomyGroup">Anatomy Group <span class="required">*</span></label>
                        <div class="input-group">
                            <i class="fas fa-tags"></i>
                            <select id="AnatomyGroup" name="AnatomyGroup" class="form-select" required>
                                <option value="" disabled selected>Select anatomy group</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="Description">Description</label>
                    <div class="input-group">
                        <i class="fas fa-align-left"></i>
                        <textarea id="Description" name="Description" rows="3" placeholder="Enter a brief description (optional)"></textarea>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="button" id="addBtn" class="btn btn-primary" onclick="addMuscle()">
                        <i class="fas fa-save"></i> Add Muscle
                    </button>
                    <button type="button" id="editBtn" class="btn btn-success" onclick="updateMuscle()" style="display:none;">
                        <i class="fas fa-save"></i> Update Muscle
                    </button>
                    <button type="reset" class="btn btn-outline">
                        <i class="fas fa-undo"></i> Reset
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Muscle List Section -->
    <div class="table-section">
        <div class="section-header">
            <div class="section-title">
                <h3>Muscle Records</h3>
                <p class="section-subtitle">List of all muscle records</p>
            </div>
            <div class="table-actions">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" id="searchAnatomy" placeholder="Search records...">
                </div>
                <button class="btn btn-primary btn-icon">
                    <i class="fas fa-download"></i> Export
                </button>
            </div>
        </div>

        <div class="table-responsive">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Anatomy Group</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody id="Data">
                    <input type="hidden" id="Id" />

                </tbody>

            </table>
        </div>

        <div class="table-footer">
            <div class="table-info">
                Showing <span>1</span> to <span>3</span> of <span>3</span> entries
            </div>
            <div class="pagination">
                <button class="btn-icon" disabled>
                    <i class="fas fa-chevron-left"></i>
                </button>
                <button class="btn-icon active">1</button>
                <button class="btn-icon" disabled>
                    <i class="fas fa-chevron-right"></i>
                </button>
            </div>
        </div>
    </div>
</div>
</main>
</div>

<!-- Confirmation Modal -->
<div class="modal" id="deleteModal">
    <div class="modal-content">
        <div class="modal-header">
            <h4>Confirm Deletion</h4>
            <button class="btn-icon close-modal">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="modal-body">
            <p>Are you sure you want to delete this record? This action cannot be undone.</p>
        </div>
        <div class="modal-footer">
            <button class="btn btn-outline close-modal">Cancel</button>
            <button class="btn btn-danger">Delete</button>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/ViewJs/muscle.js"></script>
}
