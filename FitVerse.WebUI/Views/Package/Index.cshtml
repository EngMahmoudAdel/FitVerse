<div class="form-section">
    <div class="form-card">
        <div class="form-header">
            <h3>Add New Package</h3>
            <p>Enter details below to create or update a package</p>
        </div>

        <form id="PackageForm" class="package-form">
            <input type="hidden" id="Id" name="PackageId" value="0">

            <div class="form-grid">
                <!-- Name -->
                <div class="form-group">
                    <label for="name">Package Name <span class="required">*</span></label>
                    <div class="input-group">
                        <i class="fas fa-box"></i>
                        <input type="text"
                               id="name"
                               name="name"
                               placeholder="Enter package name"
                               required />
                    </div>
                </div>

                <!-- Price -->
                <div class="form-group">
                    <label for="price">Price (EGP) <span class="required">*</span></label>
                    <div class="input-group">
                        <i class="fas fa-coins"></i>
                        <input type="number"
                               id="price"
                               name="price"
                               step="0.01"
                               min="0"
                               placeholder="Enter price"
                               required />
                    </div>
                </div>

                <!-- Sessions -->
                <div class="form-group">
                    <label for="sessions">Sessions <span class="required">*</span></label>
                    <div class="input-group">
                        <i class="fas fa-dumbbell"></i>
                        <input type="number"
                               id="sessions"
                               name="sessions"
                               min="1"
                               placeholder="Enter number of sessions"
                               required />
                    </div>
                </div>
                
            </div>

            <div class="form-actions">
                <button type="reset" class="btn btn-outline">
                    <i class="fas fa-undo"></i> Reset
                </button>
                <button type="button"
                        id="addBtn"
                        onclick="addPackage()"
                        class="btn btn-primary">
                    <i class="fas fa-save"></i> Save Record
                </button>
                <button type="button"
                        style="display:none"
                        id="editBtn"
                        onclick="updatePackage()"
                        class="btn btn-primary">
                    <i class="fas fa-save"></i> Update Record
                </button>
            </div>
        </form>
    </div>
