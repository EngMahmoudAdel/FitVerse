@{
    Layout = null;
    var title = ViewBag.Title ?? "Admin Dashboard - FitVerse";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title</title>

    <!-- ✅ Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- ✅ Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <!-- ✅ Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />

    <!-- ✅ Custom CSS -->
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>

<body>
    <!-- ✅ Navigation -->
    <nav class="navbar navbar-expand-lg navbar-custom sticky-top">
        <div class="container-fluid px-4">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Admin" asp-action="Dashboard">
                <div class="logo-icon">💪</div>
                <span>FitVerse</span>
            </a>
            <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Dashboard"><i class="bi bi-speedometer2"></i> Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Users"><i class="bi bi-people"></i> Users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Coaches"><i class="bi bi-person-badge"></i> Coaches</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Clients"><i class="bi bi-person-check"></i> Clients</a>
                    </li>

                    <!-- ⚙️ Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="systemDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-gear"></i> System
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="systemDropdown">
                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="Equipment"><i class="bi bi-tools me-2"></i> Equipment</a></li>
                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="Exercises"><i class="bi bi-lightning me-2"></i> Exercises</a></li>
                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="Anatomy"><i class="bi bi-person-arms-up me-2"></i> Anatomy</a></li>
                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="Muscles"><i class="bi bi-heart-pulse me-2"></i> Muscles</a></li>
                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="Specialties"><i class="bi bi-award me-2"></i> Specialties</a></li>
                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="Packages"><i class="bi bi-box-seam me-2"></i> Packages</a></li>
                        </ul>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Payments"><i class="bi bi-cash-coin"></i> Payments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Reports"><i class="bi bi-graph-up"></i> Reports</a>
                    </li>

                    <!-- 🔔 Notifications -->
                    <li class="nav-item position-relative">
                        <a class="nav-link notification-bell" asp-controller="Notifications" asp-action="Index">
                            <i class="bi bi-bell fs-5"></i>
                            <span class="notification-badge">5</span>
                        </a>
                    </li>

                    <!-- 👤 User Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                            <img src="https://ui-avatars.com/api/?name=Admin&background=6366f1&color=fff" alt="Admin" class="user-avatar" />
                            <span>Admin</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="Profile"><i class="bi bi-person me-2"></i> Profile</a></li>
                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="Settings"><i class="bi bi-gear me-2"></i> Settings</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right me-2"></i> Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- ✅ Page Body -->
    <div class="container-fluid mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center py-3 border-top small text-muted mt-auto">
        © @DateTime.Now.Year FitVerse. All Rights Reserved.
    </footer>

    <!-- ✅ jQuery FIRST -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

    <!-- ✅ Then Bootstrap JS (remove '...' integrity) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

    <!-- ✅ Then custom scripts -->
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/js/script.js"></script>

    <!--SWAl-->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- ✅ Page-specific scripts -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
